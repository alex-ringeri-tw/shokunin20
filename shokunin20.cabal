executable shokunin20-exe
  ghc-options: -Wall
  main-is:             Main.hs
  build-depends:
      base >=4.13 && <4.14
    , shokunin20-lib
    , array
  hs-source-dirs:      app
  default-language:    Haskell2010

library shokunin20-lib
  -- other-modules:
  -- other-extensions:
  ghc-options: -Wall
  build-depends:
      base >=4.13 && <4.14
    , array
  exposed-modules:     TaskAssigner
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs:
      test
  ghc-options: -Wall
  build-depends:
      base >= 4.13 && < 4.14
    , hspec ==2.*
    , QuickCheck >= 2.13
    , shokunin20-lib
    , containers
    , multiset
  other-modules:
      TaskAssignerSpec
  default-language: Haskell2010
  build-tool-depends: hspec-discover:hspec-discover == 2.*
